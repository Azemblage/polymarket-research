# Polymarket Research Bot Environment Variables
# Copy this file to .env and fill in your actual values

# MCP Browser Configuration
MCP_BROWSER_URL=http://localhost:3000
MCP_BROWSER_TOKEN=your_mcp_browser_token_here

# Polymarket Settings
POLYMARKET_URL=https://polymarket.com
POLYMARKET_USERNAME=your_username_here
POLYMARKET_PASSWORD=your_password_here

# AI/Research Configuration
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Database
DATABASE_URL=sqlite:///data/research.db

# Logging
LOG_LEVEL=INFO
LOG_FILE=data/research.log

# Research Parameters
RESEARCH_INTERVAL=300  # seconds
MAX_MARKETS_PER_RUN=50
ENABLE_ALERTS=true